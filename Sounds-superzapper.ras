// count down for sound timers
procedure Snd1Time();
begin
		// decrease time
		if (vsnd1Time > 0) then vsnd1Time := vsnd1Time - 1;
		// after decreasing time, if now = 0 then go to next command
		if (vsnd1Time = 0) then psnd1 := psnd1 + 2; // goto next command

end;
