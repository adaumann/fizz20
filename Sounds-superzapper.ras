// Play active sounds on voice 1
procedure UpdateSound1();
begin

	sp := Int2Ptr(#psnd1);
	// idle
	if (sp[ 0 ] = @VSA_IDLE) then
	begin

		if (vsnd1 <> 0) then
		begin
		
			//addbreakpoint(); nop(2);
			// ensure sound is off
			vsnd1 := 0;
			poke(^@VICsnd1, 0, 0);
			
		end;	
		return();		

	end;
	
	// play note
	if (sp[ 0 ] = @VSA_NOTE or sp[ 0 ] = @VSA_PAUSE) then
	begin
			
		//addbreakpoint(); nop(3);
		// if time = 0 at start, then this is a new note command			
		if (vsnd1Time = 0) then
		begin
			 
			vsnd1Time := sp[ 1 ]; // get duration
			if sp[ 0 ] = @VSA_NOTE then poke(^@VICsnd1, 0, vsnd1);
			if sp[ 0 ] = @VSA_PAUSE then poke(^@VICsnd1, 0, 0);			

		end;

		Snd1Time();

	end;

	// increment
	if (sp[ 0 ] & @VSA_INC = @VSA_INC) then
	begin
		
		// if time = 0 at start, then this is a new note command			
		if (vsnd1Time = 0) then vsnd1Time := sp[ 1 ]; // get duration

		vsnd1 := vsnd1 + (sp[ 0 ] - @VSA_INC);
		poke(^@VICsnd1, 0, vsnd1);

		Snd1Time();

	end;

	// decrement
	if (sp[ 0 ] & @VSA_DEC = @VSA_DEC) then
	begin
	
		// if time = 0 at start, then this is a new note command			
		if (vsnd1Time = 0) then vsnd1Time := sp[ 1 ]; // get duration

		vsnd1 := vsnd1 - (sp[ 0 ] - @VSA_DEC);
		poke(^@VICsnd1, 0, vsnd1);

		Snd1Time();

	end;

end;


